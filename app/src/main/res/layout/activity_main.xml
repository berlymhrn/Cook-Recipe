<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_home"
            android:padding="55dp" />

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/oleo_script_bold"
            android:text="Cookrecipe"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/placeholder"
            android:drawableRight="@drawable/icon_search"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            android:text="Search recipe here!"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular Recipe"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_below="@id/placeholder"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="185dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="220dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/smoothies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rasberry Smoothies"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/nunito_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300 kcal"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="30sp"
                    android:fontFamily="@font/nunito_bold"
                    />

                <Button
                    android:id="@+id/bookmark"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_bookmark"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="140dp"
                    android:contentDescription="go to bookmark page"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="220dp"
                    android:src="@drawable/salad"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetable Salad"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/nunito_bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200 kcal"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15sp"
                    android:layout_marginBottom="30sp"
                    android:fontFamily="@font/nunito_bold"
                    />

                <Button
                    android:id="@+id/bookmark"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/icon_bookmark"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="140dp"
                    android:contentDescription="go to favorite page"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>